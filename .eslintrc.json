{
	"root": true,
	"ignorePatterns": ["coverage", "node_modules"],
	"env": {
		"browser": false,
		"node": true,
		"es6": true,
		"jest": true
	},
	"extends": ["eslint:recommended"],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": ["import", "jest", "node", "promise", "unused-imports"],
	"rules": {
		"camelcase": 0,
		"curly": 2,
		"eqeqeq": 2,
		"func-call-spacing": 0,
		"guard-for-in": 2,
		"indent": ["error", "tab", { "SwitchCase": 1 }],
		"key-spacing": 0,
		"max-depth": ["error", { "max": 5 }],
		"no-irregular-whitespace": 2,
		"no-multi-spaces": 0,
		"padded-blocks": 0,
		"quotes": ["error", "single", { "allowTemplateLiterals": true }],
		"semi": 0,
		"no-path-concat": 1,
		"no-undef": 2,
		"unused-imports/no-unused-imports": "error",
		"no-unused-vars": 2,
		"no-var": 1
	}
}
